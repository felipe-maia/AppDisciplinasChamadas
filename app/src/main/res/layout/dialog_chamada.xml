<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutChamada"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="38dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDialogTurma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:labelFor="@id/spinnerTurma"
            android:text="Turma:"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerTurma"
            android:layout_width="151dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="317dp"
        android:layout_marginEnd="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textQtdAulas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:labelFor="@id/editQtdAulas"
            android:text="Qtd Aulas:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editQtdAulas"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:ems="10"
            android:fontFamily="sans-serif"
            android:inputType="number"
            android:labelFor="@id/textCarga" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDialogDisciplina"
            android:layout_width="138dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:labelFor="@id/spinnerDisciplina"
            android:text="Disciplina:"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerDisciplina"
            android:layout_width="151dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="98dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCriarChamada"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Criar" />

        <Button
            android:id="@+id/btnCancelarChamada"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="cancelar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:labelFor="@id/editData"
            android:text="Data:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editData"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:ems="10"
            android:fontFamily="sans-serif"
            android:inputType="textPersonName"
            android:labelFor="@id/textData" />

    </LinearLayout>

</RelativeLayout>